{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@content/*": ["src/content/*"],
      "@assets/*": ["src/assets/*"]
    },
    "types": ["astro/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
