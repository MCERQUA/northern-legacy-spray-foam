---
// Import components with proper paths
import GlassButton from '../ui/GlassButton.tsx';
import LogoScroller from '../ui/LogoScroller.tsx';
// Changed to use public image instead of asset image
const heroImage = '/images/Spray-Foam_insulation.JPG';
---

<section 
  class="relative min-h-screen flex items-center overflow-hidden"
>
  <!-- Static Hero Background -->
  <div 
    class="absolute inset-0 z-0"
    style={`background-image: url(${heroImage}); background-size: cover; background-repeat: no-repeat;`}
  >
    <!-- Responsive background positioning -->
    <style>
      @media (max-width: 768px) {
        section > div:first-child {
          background-position: 65% center !important; /* Shows more of the person on mobile */
        }
      }
      @media (min-width: 769px) {
        section > div:first-child {
          background-position: 85% center !important; /* Shifts image more to the right on desktop */
        }
      }
    </style>
    <!-- Northern Legacy overlay with professional gradient -->
    <div class="absolute inset-0 bg-gradient-to-r from-midnight/60 via-charcoal/30 to-transparent"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 w-full px-6 md:px-12 lg:px-16 pb-32 pt-32 md:pt-40">
    <div class="max-w-7xl mx-auto">
      <div class="animate-fade-in max-w-xl lg:max-w-2xl">
        <!-- Extra spacing to account for positioned logo -->
        <div class="mb-12 md:mb-16"></div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold mb-6 text-soft-white" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);">
          Professional
          <br />
          <span class="text-forest-green">Spray Foam</span>
          <br />
          <span class="text-soft-white/90">Insulation</span>
          <br />
          Solutions
        </h1>
        
        <p class="text-lg sm:text-xl lg:text-2xl text-soft-white/90 mb-8 max-w-lg font-medium" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);">
          Northern Legacy Spray Foam delivers energy-efficient insulation solutions throughout Minnesota.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <GlassButton 
            href="#contact-form" 
            size="lg"
            variant="primary"
            client:load
          >
            Get My Free Estimate
          </GlassButton>
        </div>
      </div>
    </div>
    
    <!-- Decorative elements - using Northern Legacy colors -->
    <div class="absolute top-1/4 -left-20 w-40 h-40 bg-northern-blue/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 -right-20 w-60 h-60 bg-legacy-green/10 rounded-full blur-3xl animate-float" style="animation-delay: 3s;"></div>
  </div>
  
  <!-- Logo Scroller -->
  <LogoScroller client:visible />
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-32 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 border-soft-white/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-soft-white/50 rounded-full mt-2"></div>
    </div>
  </div>
</section>

<style>
  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-slide-up {
    animation: slide-up 0.8s ease-out 0.3s both;
  }
</style>
