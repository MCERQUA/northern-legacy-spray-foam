---
// Import components with proper paths
import GlassButton from '../ui/GlassButton.tsx';
import LogoScroller from '../ui/LogoScroller.tsx';
import heroImage from '@assets/images/Comfort-Insulation-Arizona-hero1.png';
---

<section 
  class="relative min-h-screen flex items-center overflow-hidden"
>
  <!-- Static Hero Background -->
  <div 
    class="absolute inset-0 z-0"
    style={`background-image: url(${heroImage.src}); background-size: cover; background-repeat: no-repeat;`}
  >
    <!-- Responsive background positioning -->
    <style>
      @media (max-width: 768px) {
        section > div:first-child {
          background-position: 65% center !important; /* Shows more of the woman's face on mobile */
        }
      }
      @media (min-width: 769px) {
        section > div:first-child {
          background-position: 85% center !important; /* Shifts image more to the right on desktop */
        }
      }
    </style>
    <!-- Subtle overlay for better text readability -->
    <div class="absolute inset-0 bg-gradient-to-r from-charcoal/40 via-charcoal/20 to-transparent"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 w-full px-6 md:px-12 lg:px-16 pb-32 pt-32 md:pt-40">
    <div class="max-w-7xl mx-auto">
      <div class="animate-fade-in max-w-xl lg:max-w-2xl">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-bold mb-6 text-soft-white" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);">
          Comfort You
          <br />
          Can Feel.
          <br />
          <span class="text-soft-white/90">Efficiency You</span>
          <br />
          Can Trust.
        </h1>
        
        <p class="text-lg sm:text-xl lg:text-2xl text-soft-white/90 mb-8 max-w-lg font-medium" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);">
          Insulation solutions that keep your home cool in summer and cozy in winter.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <GlassButton 
            href="#contact-form" 
            size="lg"
            variant="primary"
            client:load
          >
            Get My Free Estimate
          </GlassButton>
        </div>
      </div>
    </div>
    
    <!-- Decorative elements - using warm tones -->
    <div class="absolute top-1/4 -left-20 w-40 h-40 bg-terra-cotta/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 -right-20 w-60 h-60 bg-khaki/10 rounded-full blur-3xl animate-float" style="animation-delay: 3s;"></div>
  </div>
  
  <!-- Logo Scroller -->
  <LogoScroller client:visible />
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-32 left-1/2 transform -translate-x-1/2 animate-bounce z-20">
    <div class="w-6 h-10 border-2 border-soft-white/30 rounded-full flex justify-center">
      <div class="w-1 h-3 bg-soft-white/50 rounded-full mt-2"></div>
    </div>
  </div>
</section>
