---
import { Phone, Calendar, ArrowRight, Shield, Award, Clock } from 'lucide-react';

const ctaFeatures = [
  {
    icon: Phone,
    text: "Free Consultation"
  },
  {
    icon: Calendar,
    text: "Fast Scheduling"
  },
  {
    icon: Shield,
    text: "Licensed & Insured"
  }
];
---

<section class="relative py-16 overflow-hidden">
  <!-- Professional Northern Legacy background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-northern-blue/10 via-legacy-green/5 to-steel-blue/10"></div>
  
  <!-- Decorative elements with Northern Legacy colors -->
  <div class="absolute top-1/2 left-0 w-64 h-64 bg-legacy-green/15 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute top-1/2 right-0 w-64 h-64 bg-northern-blue/15 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"></div>
  
  <div class="relative container-padding max-w-6xl mx-auto">
    <!-- Main CTA Card with Northern Legacy styling -->
    <div class="relative bg-gradient-to-br from-legacy-green to-forest-green rounded-3xl p-8 md:p-12 shadow-2xl overflow-hidden">
      <!-- Professional pattern overlay -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 text-center">
        <div class="mb-6">
          <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm rounded-full px-4 py-2 text-white/90 text-sm font-medium">
            <Award className="w-4 h-4" />
            Minnesota's Trusted Spray Foam Experts
          </div>
        </div>
        
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
          Experience the Northern Legacy Difference
        </h2>
        <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto mb-8">
          Join Minnesota homeowners and businesses who've chosen professional spray foam insulation for superior energy efficiency and comfort.
        </p>
        
        <!-- Features -->
        <div class="flex flex-wrap justify-center gap-6 mb-10">
          {ctaFeatures.map((feature) => (
            <div class="flex items-center gap-3 text-white/95 bg-white/10 backdrop-blur-sm rounded-full px-4 py-2">
              <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                <feature.icon className="w-4 h-4 text-white" />
              </div>
              <span class="font-medium text-sm">{feature.text}</span>
            </div>
          ))}
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#contact-form" 
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-legacy-green font-bold rounded-full hover:bg-ice-blue transition-all duration-300 shadow-xl hover:shadow-2xl group"
          >
            Get Your Free Quote Today
            <ArrowRight className="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" />
          </a>
          <a 
            href="tel:3207602543" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-bold rounded-full border-2 border-white/50 hover:bg-white/10 hover:border-white transition-all duration-300"
          >
            <Phone className="w-5 h-5 mr-2" />
            Call: (320) 760-2543
          </a>
        </div>
        
        <!-- Trust indicators with Northern Legacy information -->
        <div class="mt-8 space-y-3">
          <div class="flex items-center justify-center gap-2 text-white/80">
            <Shield className="w-5 h-5" />
            <span class="text-sm">Licensed • Bonded • Insured Minnesota Contractor</span>
          </div>
          <div class="flex items-center justify-center gap-2 text-white/70 text-xs">
            <Clock className="w-4 h-4" />
            <span>Founded May 2022 • Owner: Garhard Hendricks • Statewide Service</span>
          </div>
        </div>
      </div>
      
      <!-- Professional corner accents -->
      <div class="absolute top-0 left-0 w-24 h-24 bg-gradient-to-br from-white/15 to-transparent rounded-br-3xl"></div>
      <div class="absolute bottom-0 right-0 w-24 h-24 bg-gradient-to-tl from-white/15 to-transparent rounded-tl-3xl"></div>
      
      <!-- Subtle grid pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 20px 20px;"></div>
      </div>
    </div>
  </div>
</section>
