---
import { Phone, Calendar, ArrowRight, Shield, Award, Clock } from 'lucide-react';

const ctaFeatures = [
  {
    icon: Phone,
    text: "Free Consultation"
  },
  {
    icon: Calendar,
    text: "Fast Scheduling"
  },
  {
    icon: Shield,
    text: "Licensed & Insured"
  }
];
---

<section class="relative py-16 overflow-hidden">
  <!-- Dark professional background -->
  <div class="absolute inset-0 bg-gradient-to-br from-charcoal via-midnight to-charcoal"></div>
  
  <!-- Subtle animated pattern overlay -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.2) 1px, transparent 0); background-size: 40px 40px; animation: float 20s ease-in-out infinite;"></div>
  </div>
  
  <!-- Decorative elements with enhanced styling -->
  <div class="absolute top-1/2 left-0 w-96 h-96 bg-legacy-green/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2 animate-pulse"></div>
  <div class="absolute top-1/2 right-0 w-96 h-96 bg-northern-blue/10 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2 animate-pulse" style="animation-delay: 2s;"></div>
  
  <div class="relative container-padding max-w-6xl mx-auto">
    <!-- Enhanced CTA Card with darker styling -->
    <div class="relative bg-gradient-to-br from-slate-900/95 via-slate-800/95 to-slate-900/95 rounded-3xl p-8 md:p-12 shadow-2xl overflow-hidden border border-slate-700/50 backdrop-blur-xl">
      
      <!-- Enhanced pattern overlay -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 text-center">
        <div class="mb-6">
          <div class="inline-flex items-center gap-2 bg-legacy-green/20 backdrop-blur-sm rounded-full px-6 py-3 text-legacy-green text-sm font-medium border border-legacy-green/30">
            <Award className="w-4 h-4" />
            Minnesota's Trusted Spray Foam Experts
          </div>
        </div>
        
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
          Experience the <span class="text-legacy-green">Northern Legacy</span> Difference
        </h2>
        <p class="text-lg md:text-xl text-slate-300 max-w-2xl mx-auto mb-8">
          Join Minnesota homeowners and businesses who've chosen professional spray foam insulation for superior energy efficiency and comfort.
        </p>
        
        <!-- Enhanced Features with glass effects -->
        <div class="flex flex-wrap justify-center gap-6 mb-10">
          {ctaFeatures.map((feature) => (
            <div class="flex items-center gap-3 text-white bg-white/10 backdrop-blur-sm rounded-full px-6 py-3 border border-white/20 hover:bg-white/15 transition-all duration-300 group">
              <div class="w-8 h-8 bg-legacy-green/20 rounded-full flex items-center justify-center group-hover:bg-legacy-green/30 transition-colors duration-300">
                <feature.icon className="w-4 h-4 text-legacy-green" />
              </div>
              <span class="font-medium text-sm">{feature.text}</span>
            </div>
          ))}
        </div>
        
        <!-- Enhanced CTA Buttons with better styling -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a 
            href="#contact-form" 
            class="group inline-flex items-center justify-center px-8 py-4 bg-white text-legacy-green font-bold rounded-full hover:bg-slate-100 transition-all duration-300 shadow-xl hover:shadow-2xl relative overflow-hidden"
          >
            <div class="absolute inset-0 bg-gradient-to-r from-legacy-green/5 to-northern-blue/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <span class="relative z-10">Get Your Free Quote Today</span>
            <ArrowRight className="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform relative z-10" />
          </a>
          <a 
            href="tel:3207602543" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-bold rounded-full border-2 border-white/30 hover:bg-white/10 hover:border-white/50 transition-all duration-300 backdrop-blur-sm"
          >
            <Phone className="w-5 h-5 mr-2" />
            Call: (320) 760-2543
          </a>
        </div>
        
        <!-- Enhanced trust indicators with better styling -->
        <div class="space-y-3">
          <div class="flex items-center justify-center gap-3 text-slate-300">
            <div class="flex items-center gap-2">
              <Shield className="w-5 h-5 text-legacy-green" />
              <span class="text-sm font-medium">Licensed • Bonded • Insured Minnesota Contractor</span>
            </div>
          </div>
          <div class="flex items-center justify-center gap-2 text-slate-400 text-xs">
            <Clock className="w-4 h-4" />
            <span>Founded May 2022 • Owner: Garhard Hendricks • Statewide Service</span>
          </div>
        </div>
      </div>
      
      <!-- Enhanced corner accents with glow effects -->
      <div class="absolute top-0 left-0 w-32 h-32 bg-gradient-to-br from-legacy-green/20 to-transparent rounded-br-3xl"></div>
      <div class="absolute bottom-0 right-0 w-32 h-32 bg-gradient-to-tl from-northern-blue/20 to-transparent rounded-tl-3xl"></div>
      
      <!-- Inner border glow -->
      <div class="absolute inset-0 rounded-3xl border border-white/10 pointer-events-none"></div>
      
      <!-- Subtle moving highlights */
      <div class="absolute top-0 left-1/4 w-1/2 h-px bg-gradient-to-r from-transparent via-white/20 to-transparent animate-pulse"></div>
      <div class="absolute bottom-0 right-1/4 w-1/2 h-px bg-gradient-to-r from-transparent via-legacy-green/30 to-transparent animate-pulse" style="animation-delay: 1s;"></div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% {
      transform: translateY(0px) translateX(0px);
    }
    33% {
      transform: translateY(-10px) translateX(5px);
    }
    66% {
      transform: translateY(5px) translateX(-5px);
    }
  }
</style>
