---
import { Phone, Calendar, ArrowRight } from 'lucide-react';

const ctaFeatures = [
  {
    icon: Phone,
    text: "Free Consultation"
  },
  {
    icon: Calendar,
    text: "Same-Week Service"
  },
  {
    icon: ArrowRight,
    text: "No-Obligation Quote"
  }
];
---

<section class="relative py-16 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-sage-mist/5 via-transparent to-sage-mist/5"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-1/2 left-0 w-64 h-64 bg-sage-mist/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute top-1/2 right-0 w-64 h-64 bg-sage-mist/10 rounded-full blur-3xl translate-x-1/2 -translate-y-1/2"></div>
  
  <div class="relative container-padding max-w-6xl mx-auto">
    <!-- Main CTA Card -->
    <div class="relative bg-gradient-to-r from-sage-mist to-sage-mist/90 rounded-3xl p-8 md:p-12 shadow-2xl overflow-hidden">
      <!-- Pattern overlay -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23ffffff" fill-opacity="0.4"%3E%3Cpath d="M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
      </div>
      
      <!-- Content -->
      <div class="relative z-10 text-center">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-4">
          Ready to Start Saving?
        </h2>
        <p class="text-lg md:text-xl text-white/90 max-w-2xl mx-auto mb-8">
          Join hundreds of Arizona homeowners who've transformed their comfort and cut their energy bills in half.
        </p>
        
        <!-- Features -->
        <div class="flex flex-wrap justify-center gap-6 mb-10">
          {ctaFeatures.map((feature) => (
            <div class="flex items-center gap-2 text-white/90">
              <div class="w-10 h-10 bg-white/20 rounded-full flex items-center justify-center">
                <feature.icon className="w-5 h-5 text-white" />
              </div>
              <span class="font-medium">{feature.text}</span>
            </div>
          ))}
        </div>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="#contact-form" 
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-sage-mist font-bold rounded-full hover:bg-soft-white transition-all duration-300 shadow-xl hover:shadow-2xl group"
          >
            Get Your Free Quote
            <ArrowRight className="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" />
          </a>
          <a 
            href="tel:1234567890" 
            class="inline-flex items-center justify-center px-8 py-4 bg-transparent text-white font-bold rounded-full border-2 border-white/50 hover:bg-white/10 hover:border-white transition-all duration-300"
          >
            <Phone className="w-5 h-5 mr-2" />
            Call Now: (123) 456-7890
          </a>
        </div>
        
        <!-- Trust indicator -->
        <div class="mt-8 flex items-center justify-center gap-2 text-white/80">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm">Licensed, Bonded & Insured â€¢ ROC #123456</span>
        </div>
      </div>
      
      <!-- Corner accents -->
      <div class="absolute top-0 left-0 w-32 h-32 bg-white/10 rounded-br-full"></div>
      <div class="absolute bottom-0 right-0 w-32 h-32 bg-white/10 rounded-tl-full"></div>
    </div>
  </div>
</section>
