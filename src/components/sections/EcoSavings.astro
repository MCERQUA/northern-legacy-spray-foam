---
import { Leaf, DollarSign, TrendingDown, Home, Snowflake, ThermometerSun } from 'lucide-react';

const benefits = [
  {
    icon: DollarSign,
    title: "Save Up to 40%",
    subtitle: "On Heating Bills",
    description: "Minnesota winters demand efficient insulation. Spray foam delivers exceptional R-value performance."
  },
  {
    icon: Snowflake,
    title: "Winter Ready",
    subtitle: "Cold Climate Protection",
    description: "Superior air sealing prevents heat loss during harsh Minnesota winter conditions."
  },
  {
    icon: ThermometerSun,
    title: "Year-Round Comfort",
    subtitle: "All-Season Performance",
    description: "Keep cool in summer, warm in winter with consistent indoor temperature control."
  },
  {
    icon: Home,
    title: "Increase Value",
    subtitle: "Property Investment",
    description: "Energy-efficient homes command higher resale values in today's Minnesota market."
  }
];
---

<section class="relative py-20 overflow-hidden" id="efficiency-section">
  <!-- Professional Northern Legacy background -->
  <div class="absolute inset-0 bg-gradient-to-br from-ice-blue/20 to-mint-gray/20"></div>
  
  <!-- Decorative elements with Northern Legacy colors -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-legacy-green/15 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-northern-blue/15 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
  
  <div class="relative container-padding max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16 relative z-10">
      <div class="inline-flex items-center gap-2 mb-4">
        <div class="w-12 h-[1px] bg-legacy-green"></div>
        <span class="text-legacy-green font-medium uppercase tracking-wider text-sm">Energy Efficiency & Savings</span>
        <div class="w-12 h-[1px] bg-legacy-green"></div>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-charcoal mb-4">
        Built for Minnesota.<br class="hidden md:block" />
        <span class="text-legacy-green">Designed for Savings.</span>
      </h2>
      <p class="text-base sm:text-lg text-cool-gray max-w-2xl mx-auto px-4">
        Northern Legacy Spray Foam provides superior insulation performance specifically engineered for Minnesota's challenging climate conditions.
      </p>
    </div>

    <!-- Benefits Grid -->
    <div class="relative">
      <!-- Mobile floating stats with Northern Legacy styling -->
      <div class="absolute -top-4 -right-2 sm:-right-4 z-40 lg:hidden">
        <div class="bg-arctic-white rounded-2xl shadow-northern px-3 py-2 sm:px-4 sm:py-3 transform rotate-3 border border-legacy-green/20">
          <div class="text-xl sm:text-2xl font-bold text-legacy-green">40%</div>
          <div class="text-xs text-cool-gray">Energy Saved</div>
        </div>
      </div>
      
      <div class="absolute -bottom-16 left-4 sm:-bottom-20 sm:left-4 z-40 lg:hidden">
        <div class="bg-arctic-white rounded-2xl shadow-northern px-3 py-2 sm:px-4 sm:py-3 transform -rotate-6 border border-northern-blue/20">
          <div class="text-xl sm:text-2xl font-bold text-northern-blue">R-49</div>
          <div class="text-xs text-cool-gray">Insulation Value</div>
        </div>
      </div>

      <!-- Benefits Grid with Northern Legacy styling -->
      <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6 mb-16 relative z-30">
        {benefits.map((benefit, index) => (
          <div class="group relative">
            <!-- Card with professional Northern Legacy styling -->
            <div class="relative bg-arctic-white/90 backdrop-blur-sm rounded-xl sm:rounded-2xl p-4 sm:p-5 md:p-6 shadow-northern border border-ice-blue/30 overflow-hidden transition-all duration-300 hover:shadow-legacy hover:border-legacy-green/40 hover:bg-arctic-white">
              <!-- Hover gradient -->
              <div class="absolute inset-0 bg-gradient-to-br from-legacy-green/5 to-northern-blue/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Icon -->
              <div class="relative mb-3 md:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-legacy-green/15 rounded-lg sm:rounded-xl flex items-center justify-center group-hover:bg-legacy-green/25 transition-colors duration-300">
                  <benefit.icon className="w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 text-legacy-green" />
                </div>
              </div>
              
              <!-- Content -->
              <div class="relative">
                <h3 class="text-base sm:text-lg md:text-xl font-bold text-charcoal mb-1">{benefit.title}</h3>
                <p class="text-xs sm:text-sm font-medium text-legacy-green mb-2">{benefit.subtitle}</p>
                <p class="text-xs sm:text-sm text-cool-gray leading-relaxed">{benefit.description}</p>
              </div>
              
              <!-- Decorative corner accent -->
              <div class="absolute -bottom-2 -right-2 w-12 sm:w-16 h-12 sm:h-16 bg-gradient-to-tl from-legacy-green/10 to-transparent rounded-tl-3xl"></div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Minnesota Climate Focus CTA -->
    <div class="relative z-30">
      <div class="bg-gradient-to-br from-legacy-green/10 via-northern-blue/5 to-steel-blue/10 rounded-3xl p-6 sm:p-8 md:p-12 border border-legacy-green/20">
        <div class="max-w-3xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 mb-4 px-3 sm:px-4 py-2 bg-legacy-green/15 rounded-full">
            <Snowflake className="w-4 h-4 sm:w-5 sm:h-5 text-legacy-green" />
            <span class="text-legacy-green font-medium text-xs sm:text-sm">Minnesota Climate Specialists</span>
          </div>
          <h3 class="text-xl sm:text-2xl md:text-3xl font-bold text-charcoal mb-3 sm:mb-4">
            See How Much You Could Save This Winter
          </h3>
          <p class="text-sm sm:text-base md:text-lg text-cool-gray mb-6 sm:mb-8 max-w-xl mx-auto px-4">
            Every Minnesota home faces unique challenges. Get a personalized estimate for your energy savings and comfort improvements.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
            <a 
              href="#contact-form" 
              class="inline-flex items-center justify-center px-6 sm:px-8 py-2.5 sm:py-3 bg-legacy-green text-white font-medium rounded-full hover:bg-legacy-green/90 transition-all duration-300 shadow-lg hover:shadow-xl text-sm sm:text-base"
            >
              Calculate My Savings
            </a>
            <a 
              href="tel:3207602543" 
              class="inline-flex items-center justify-center px-6 sm:px-8 py-2.5 sm:py-3 bg-arctic-white text-legacy-green font-medium rounded-full hover:bg-ice-blue border-2 border-legacy-green/30 transition-all duration-300 text-sm sm:text-base"
            >
              Call (320) 760-2543
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Desktop floating stats with Northern Legacy colors -->
    <div class="absolute right-0 xl:-right-4 top-1/4 hidden lg:block z-40">
      <div class="bg-arctic-white rounded-2xl shadow-northern p-4 transform rotate-3 hover:rotate-0 transition-transform duration-300 border border-legacy-green/20">
        <div class="text-3xl font-bold text-legacy-green">40%</div>
        <div class="text-sm text-cool-gray">Energy Saved</div>
      </div>
    </div>
    <div class="absolute left-0 xl:-left-4 top-1/2 hidden lg:block z-40">
      <div class="bg-arctic-white rounded-2xl shadow-northern p-4 transform -rotate-3 hover:rotate-0 transition-transform duration-300 border border-northern-blue/20">
        <div class="text-3xl font-bold text-northern-blue">R-49</div>
        <div class="text-sm text-cool-gray">Max R-Value</div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float-gentle {
    0%, 100% {
      transform: translateY(0) rotate(3deg);
    }
    50% {
      transform: translateY(-8px) rotate(3deg);
    }
  }
  
  .absolute.right-0.xl\\:-right-4:hover {
    animation: float-gentle 2s ease-in-out infinite;
  }
  
  .absolute.left-0.xl\\:-left-4:hover {
    animation: float-gentle 2s ease-in-out infinite 1s;
  }
</style>
