---
import '../styles/global.css';
import MetalMenuBar from '../components/ui/MetalMenuBar.tsx';
import FloatingContactButton from '../components/ui/FloatingContactButton.tsx';
import GlassFilter from '../components/ui/GlassFilter.tsx';
import Footer from '../components/sections/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Northern Legacy Spray Foam - Professional spray foam insulation solutions for Minnesota homes and businesses' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Northern Legacy Spray Foam</title>
    
    <!-- Favicon configuration -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/svg+xml" sizes="32x32" href="/favicon-32x32.svg" />
    <link rel="icon" type="image/svg+xml" sizes="16x16" href="/favicon-16x16.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/images/logos/NLSF-compass.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/images/logos/NLSF-compass.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/logos/NLSF-compass.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#1a365d" />
    <meta name="msapplication-TileColor" content="#1a365d" />
    <meta name="msapplication-TileImage" content="/images/logos/NLSF-compass.png" />
    
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  </head>
  <body class="bg-arctic-white text-charcoal">
    <!-- Glass Filter SVG -->
    <GlassFilter client:load />
    
    <!-- Navigation -->
    <MetalMenuBar client:load />
    
    <!-- Main Content -->
    <main class="min-h-screen">
      <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
    
    <!-- Floating Contact Button -->
    <FloatingContactButton client:load />
  </body>
</html>
